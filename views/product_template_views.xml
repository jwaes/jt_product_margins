<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="product_template_form_view_view_inherit" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="list_price" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <div name="list_price_uom" position="after">
                <label for="public_pricelist_price" />
                <div name="public_pricelist_price_div">
                    <field name="public_pricelist_price"
                        class="oe_inline"
                        widget="monetary"
                        options="{'currency_field': 'currency_id', 'field_digits': True}"
                        decoration-muted="not sale_ok" />
                    <span
                        name="uom_span"
                        groups="uom.group_uom"
                        invisible="type == 'combo'"
                    > per <field
                            name="uom_id"
                            class="oe_inline" style="max-width:136px"
                            options="{'no_create': True}"
                        />
                    </span>
                </div>
            </div>
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <label for="standard_price_max" groups="base.group_user"
                    invisible="product_variant_count == 1" string="Cost (max)" />
                <div name="standard_price_max" groups="base.group_user"
                    invisible="product_variant_count == 1" class="o_row">
                    <field name="standard_price_max" widget='monetary'
                        options="{'currency_field': 'cost_currency_id', 'field_digits': True}" />
                    <span groups="uom.group_uom" class="oe_read_only">per <field name="uom_name" />
                    </span>
                </div>
                <field name="profit_margin" widget="percentage" string="Profit Margin (est.)"
                    decoration-muted="not sale_ok" />
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_inherit_margin" model="ir.ui.view">
        <field name="name">product.template.view.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="list_price" position="after">
                <field name="public_pricelist_price" widget='monetary'
                    options="{'currency_field': 'currency_id'}" optional="hide"
                    decoration-muted="not sale_ok" />
                <field name="profit_margin" widget='percentage' optional="hide"
                    decoration-muted="not sale_ok" />
                <field name="standard_price_max" widget='monetary'
                    options="{'currency_field': 'cost_currency_id', 'field_digits': True}"
                    optional="hide" />
            </field>
        </field>
    </record>

</odoo>